* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

* {
  list-style: none;
}

p {
  margin: 1em 0;
}

ul {
  margin: 1em 0;
  padding-left: 40px;
}

.menu {
  background: blueviolet;
  height: 70px;
