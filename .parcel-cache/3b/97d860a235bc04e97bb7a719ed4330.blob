  display: flex;
  align-items: center;
  color: white
}

.home-item, .new-product, .new-buy {
  padding-left: 20px;
}

.menu :any-link {
  color: white;
  text-decoration: none;
}

.modal-product {
  position: absolute;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  padding-top: 20vh;
  background: rgba(0, 0, 0, 0.2);
}

.products {
  padding: 10px;
}

.products ul {
  padding: 0;
}

.container {
  max-width: 600px;
  margin: auto;
  padding: 10px;
  background: white;
}

